<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- hallo -->
    <!-- android:background="@string/buttonColor" -->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/antibioticTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/antibiotic"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/medicamentTextField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/medicament" />

            <AutoCompleteTextView
                android:id="@+id/editAntibioticAutoCompleteTextView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:autoText="false"
                android:ems="10"
                android:textColor="#000000" >

                <requestFocus />
            </AutoCompleteTextView>
        </TableRow>

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/dosageTextField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/dosage" />

            <AutoCompleteTextView
                android:id="@+id/editDosageAutoCompleteTextView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:textColor="#000000" >

                <requestFocus />
            </AutoCompleteTextView>
        </TableRow>

        <TableRow android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/ivpoTextField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/ivpo" />

            <CheckBox
                android:id="@+id/ivCheckBox"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="@string/iv" />

            <CheckBox
                android:id="@+id/poCheckBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/po" />
        </TableRow>

        <TextView
            android:id="@+id/proTherTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/proTher" />

        <!-- SpaltenlÃ¤nge bearbeteiten!!! -->

        <TableRow android:layout_marginTop="12dp" >

            <CheckBox
                android:id="@+id/therCheckBox"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="@string/ther" />

            <CheckBox
                android:id="@+id/proCheckBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pro" />

            <CheckBox
                android:id="@+id/unknownCheckBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/unknown" />
        </TableRow>

        <TableRow android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/commentTextField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/comment" />

            <EditText
                android:id="@+id/editCommentTextField"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:ems="9"
                android:inputType="textMultiLine" />
        </TableRow>

        <Button
            android:id="@+id/interventionPossibilitiyButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button"
            android:text="@string/interventionPossibilitiy" />
    </TableLayout>

</ScrollView>